#################### 4S - Supremely Simple Scripted Strings ####################
## 4S Core UPDATER
##
##
## Follow the [README](https://github.com/4-S/4S-custom)
##
## DISABLE WORD WRAP for proper viewing.
################################################################################


################################################################################
##   |   Shortcut       |              |                                                                               | Purposely blank                | echo "source ~/.4s-custom1" >> ~/.bash_profile| Reload alias      | Display header        |
##---|----------------- |--------------|-------------------------------------------------------------------------------|--------------------------------|-----------------------------------------|-------------------|-----------------------|
alias 4s-update-custom1='cd ~/.4s-core ; wget -q http://4s-stable-core.ipfu.org/ubuntu-bash/.4s-custom1 -O ~/.4s-core/.4s-custom1 ;                                ;                                         ; source ~/.bash_profile  ; head -n 8 .4s-custom1'
alias 4s-update-custom2='cd ~/.4s-core ; wget -q http://4s-stable-core.ipfu.org/ubuntu-bash/.4s-custom2 -O ~/.4s-core/.4s-custom2 ;                                ;                                         ; source ~/.bash_profile  ; head -n 8 .4s-custom2'
alias 4s-update-custom3='cd ~/.4s-core ; wget -q http://4s-stable-core.ipfu.org/ubuntu-bash/.4s-custom3 -O ~/.4s-core/.4s-custom3 ;                                ;                                         ; source ~/.bash_profile  ; head -n 8 .4s-custom3'
alias 4s-update-custom4='cd ~/.4s-core ; wget -q http://4s-stable-core.ipfu.org/ubuntu-bash/.4s-custom4 -O ~/.4s-core/.4s-custom4 ;                                ;                                         ; source ~/.bash_profile  ; head -n 8 .4s-custom4'
alias 4s-update-custom5='cd ~/.4s-core ; wget -q http://4s-stable-core.ipfu.org/ubuntu-bash/.4s-custom5 -O ~/.4s-core/.4s-custom5 ;                                ;                                         ; source ~/.bash_profile  ; head -n 8 .4s-custom5'
